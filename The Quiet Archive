    <script>
        function showSection(sectionId) {
            // Hide all sections
            const sections = document.querySelectorAll('.main-content');
            sections.forEach(section => section.classList.remove('active'));
            
            // Show selected section
            document.getElementById(sectionId).classList.add('active');
            
            // Update active nav link
            const navLinks = document.querySelectorAll('nav a');
            navLinks.forEach(link => link.classList.remove('active'));
            event.target.classList.add('active');
            
            // Animate elements
            const cards = document.querySelectorAll(`#${sectionId} .fade-in`);
            cards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
            });
        }

        function addNewReview() {
            const title = prompt("Título del libro:");
            const author = prompt("Autor del libro:");
            const rating = prompt("Calificación (1-5 estrellas):");
            const review = prompt("Reseña (máximo 350 palabras):");
            const affiliateLink = prompt("Enlace de afiliado:");
            
            if (title && author && review) {
                const reviewsGrid = document.querySelector('#reviews .grid');
                const newReview = document.createElement('div');
                newReview.className = 'card review-card fade-in';
                
                const stars = '★'.repeat(parseInt(rating) || 0) + '☆'.repeat(5 - (parseInt(rating) || 0));
                
                newReview.innerHTML = `
                    <div class="book-info">
                        <img src="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' width='200' height='280' style='background:%23f5f5f5'><text x='50%' y='50%' text-anchor='middle' dy='.3em' font-family='serif' font-size='14' fill='%23999'>Portada</text></svg>" alt="Portada" class="book-cover">
                        <div class="book-details">
                            <h4>${title}</h4>
                            <p class="author">por ${author}</p>
                            <div class="rating">${stars}</div>
                            <p>${review}</p>
                            ${affiliateLink ? `<a href="${affiliateLink}" class="affiliate-link">Comprar libro</a>` : ''}
                        </div>
                    </div>
                `;
                
                reviewsGrid.appendChild(newReview);
            }
        }

        function addNewArticle() {
            const title = prompt("Título del artículo:");
            const excerpt = prompt("Extracto del artículo:");
            
            if (title && excerpt) {
                const articlesContainer = document.querySelector('#articles .container');
                const newArticle = document.createElement('div');
                newArticle.className = 'article-card fade-in';
                
                const today = new Date().toLocaleDateString('es-ES', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                });
                
                newArticle.innerHTML = `
                    <div class="article-date">${today}</div>
                    <h3 class="article-title">${title}</h3>
                    <p class="article-excerpt">${excerpt}</p>
                    <a href="#" class="read-more">Leer más →</a>
                `;
                
                // Insert before the button
                const button = articlesContainer.querySelector('.text-center');
                articlesContainer.insertBefore(newArticle, button);
            }
        }

        function uploadPhoto(element) {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = 'image/*';
            input.onchange = function(e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        element.innerHTML = `<img src="${e.target.result}" style="width: 100%; height: 100%; object-fit: cover;">`;
                    };
                    reader.readAsDataURL(file);
                }
            };
            input.click();
        }

        function playFromPlaylist(element) {
            const songInfo = element.innerHTML;
            const [title, artist] = songInfo.split(' - ');
            
            document.querySelector('.song-title').textContent = title.replace('<strong>', '').replace('</strong>', '');
            document.querySelector('.song-artist').textContent = artist || 'Artista desconocido';
            
            // Remove active class from all playlist items
            document.querySelectorAll('#music .music-player div[onclick]').forEach(item => {
                item.style.background = 'transparent';
            });
            
            // Add active class to clicked item
            element.style.background = '#f0f0f0';
        }

        // Add smooth scrolling animation on load
        window.addEventListener('load', function() {
            const cards = document.querySelectorAll('.fade-in');
            cards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
            });
        });
    </script>
</body>
</html>
